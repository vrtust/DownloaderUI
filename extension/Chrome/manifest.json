{
  "manifest_version": 3,
  "name": "Custom Download Manager",
  "version": "1.0",
  "description": "Intercepts downloads and uses a custom download manager",
  "permissions": [
    "downloads",
    "webRequest"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "48": "icons/border-48.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "48": "icons/border-48.png"
  }
}